<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>

  <form action="/available_contacts " method="post" class= "form-horizontal">
    <!-- Hidden input for authenticity token to protect from forgery -->
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

    <div class="form-group">

      <label for="start_time" class="col-sm-3 control-label"> Search for contacts available between</label>

      <div class="col-sm-2">
        <input type="datetime" id="start_time" name="start_time" placeholder="Start time" class="form-control" value="<%= @start_time %>">
      </div>

      <label for="end_time" class="col-sm-1 control-label">and</label>

      <div class="col-sm-2">
        <input type="datetime" id="end_time" name="end_time" placeholder="End time" class="form-control" value="<%=
        @end_time %>">
      </div>

      <button class="btn btn-mid btn-success">Check</button>

    </div>
  </form>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th>Name</th>
          <th>Creator</th>
          <th>Start time</th>
          <th>End time</th>
          <th>Location</th>
          <th>Location address</th>
          <th>Is Private</th>
          <th>Actions</th>
        </tr>

        <% @events.each do |event| %>
        <tr>
          <td><%= event.name %></td>
          <td><%= event.user.name %></td>
          <td><%= event.start_time %></td>
          <td><%= event.end_time %></td>
          <td><%= event.location %></td>
          <td><%= event.location_address %></td>
          <td><%= event.isprivate %></td>
          <td>
            <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
            <% if current_user.id == event.creator_id %>
            <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
