<div class="page-header">
  <h1>
    Calendar entries
    <a href="/calendar_entries/new" class="btn btn-lg btn-success">New Calendar entry</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Event</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Actions</th>
      </tr>

      <% @calendar_entries.each do |calendar_entry| %>
      <tr>
        <td><%= calendar_entry.user_id %></td>
        <td><%= calendar_entry.event_id %></td>
        <td><%= calendar_entry.start_time %></td>
        <td><%= calendar_entry.end_time %></td>
        <td>
          <a href="/calendar_entries/<%= calendar_entry.id %>" class="btn btn-primary">Show</a>
          <a href="/calendar_entries/<%= calendar_entry.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_calendar_entry/<%= calendar_entry.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
